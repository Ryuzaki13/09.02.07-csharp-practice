<Application x:Class="PZ10.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PZ10"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="ProductListView">
            <StackPanel>
                <TextBlock>
                    <Run FontWeight="Bold" Text="{Binding Path=Name}"></Run>
                    <Run Text="{Binding Path=Price}"></Run>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
    </Application.Resources>
</Application>
