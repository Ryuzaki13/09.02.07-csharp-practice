<Window x:Class="StudentManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManager"
        mc:Ignorable="d"
        Title="Управление студентами" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="SpecialtyPanel" DataContext="{Binding NewSpecialty}" Grid.Column="0" Margin="10">
            <Label>Код специальности</Label>
            <TextBox Text="{Binding Code}"></TextBox>
            <Label>Наименование специальности</Label>
            <TextBox Text="{Binding Caption}"></TextBox>
            <Label>Квалификация специальности</Label>
            <TextBox Text="{Binding Qualification}"></TextBox>
            <Button Click="CreateSpecialtyClick" Margin="0 10">Создать</Button>
        </StackPanel>
        
        <StackPanel Grid.Column="1" Margin="10">
            <ComboBox ItemsSource="{Binding Specialties}"></ComboBox>
        </StackPanel>
        
        <StackPanel Grid.Column="2" Margin="10"></StackPanel>

    </Grid>
</Window>
